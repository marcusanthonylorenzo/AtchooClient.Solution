
@model AtchooClient.Models.UserProfile

<h4 style="margin-bottom: 3%">Create Your Profile</h4>

<div class= "inner-content"
    style="
    display: flex;
    justify-content: center;
    margin-left: 22%">

      <div class="form-wrap" style="margin: 0 auto; width: 60%">

            @using (Html.BeginForm("Create","UserProfiles",FormMethod.Post,new {enctype ="multipart/form-data"}))
            {
              <div class = "card form" style="width: 300%;" id="create-form">

                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { required = "required" })

                @Html.Label("Date of Birth")
                @Html.TextBoxFor(model => model.DOB, new { required = "required", @type = "date", value = "model.DOB" })

                @Html.LabelFor(model => model.Bio)
                @Html.TextAreaFor(model => model.Bio, new { required = "required", maxlength=250, @class = "form-control" })
                
                <input  type="file" name="FrontImage" />

                @Html.Label("Select Allergy")
                @Html.DropDownList("UserAllergyId")

                <input class="button" type="submit" value="create profile" style="background-color: aliceblue"/>

              </div>
            }

      </div>

</div>